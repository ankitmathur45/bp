<div class="container-fluid" ng-app="backpackApp" ng-controller="backpackController" ng-cloak="">

	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<table class="table table-hover">
					<thead>
			            <tr>
			                <th>Date</th>
			                <th>Time</th>
			                <th>Type</th>
			                <th>Name</th>
			                <th>Action/Value</th>
			            </tr>
			        </thead>
			        <tbody>
			            <tr ng-repeat="info in infos" >
							<td class="align-middle">{{ info.date_time }}</td>	                            
							<td class="align-middle">{{ info.info_type }}</td>		            
							<td class="align-middle">{{ info.info_name }}</td>		            						                     
							<td class="align-middle">
								<button class="btn btn-primary" ng-click="getInfo($index)" ng-show="info.info_type == 'Image'">View</button>
								<button class="btn btn-primary" ng-click="getInfo($index)" ng-show="info.info_type == 'Audio'">Play</button>
								<button class="btn btn-primary" ng-click="getInfo($index)" ng-show="info.info_type == 'GPS'">View</button>
							</td>		            						                     
			            </tr>           
